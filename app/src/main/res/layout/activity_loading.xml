<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity"
    android:background="#5DC8C5">

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="FLIP THE COIN"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/secondary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Will it be heads or tails"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#B9FFFFFF"
        android:layout_below="@id/main_txt"/>

    <ImageView
        android:id="@+id/loading_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/secondary_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/loadingcir" />

</RelativeLayout>