<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/coin_front"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="60dp"
        android:text="HEAD"
        android:textStyle="bold"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/head_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/coin_front"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"
        android:text="0"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coin_front"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="90dp"
        android:text="TAIL"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tail_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coin_front"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/coin_front"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/head" />

    <ImageView
        android:id="@+id/coin_back"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tail" />

    <ImageView
        android:id="@+id/coin_def"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/def" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flip the coin"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="18dp"
        android:layout_below="@id/coin_front"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

</RelativeLayout>